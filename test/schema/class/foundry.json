{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"$id": "foundry-class.json",
	"version": "1.0.0",

	"type": "object",

	"definitions": {
		"foundryDataObject": {
			"type": "object"
		},

		"foundrySubEntitiesObject": {
			"description": "A 5etools-data-like object of additional stuff to import.",
			"type": "object"
		},

		"foundryEffectObject": {
			"type": "object",
			"properties": {
				"name": {"type": "string"},
				"changes": {
					"type": "array",
					"items": {
						"type": "object",
						"properties": {
							"key": {"type": "string"},
							"mode": {"type": ["string", "integer"]},
							"value": true
						},
						"required": ["key", "mode", "value"],
						"additionalProperties": false
					}
				},
				"disabled": {"type": "boolean"}
			},
			"required": ["changes"],
			"additionalProperties": false
		}
	},

	"properties": {
		"class": {
			"type": "array",
			"items": {
				"type": "object",
				"properties": {
					"name": {"type": "string"},
					"source": {"type": "string"},

					"entries": {"type": "array", "items": {"$ref": "entry.json"}},
					"data": {"$ref": "#/definitions/foundryDataObject"},
					"chooseData": {"type": "array", "items": {"$ref": "#/definitions/foundryDataObject"}},
					"isChooseDataRenderEntries": {"type": "boolean"},
					"isIgnored": {"type": "boolean"},
					"actorDataMod": {"type": "object"},
					"actorTokenMod": {"type": "object"},
					"effects": {"type": "array", "items": {"$ref": "#/definitions/foundryEffectObject"}},

					"subEntities": {"$ref": "#/definitions/foundrySubEntitiesObject"}
				},
				"required": [
					"name",
					"source"
				],
				"additionalProperties": false
			}
		},
		"classFeature": {
			"type": "array",
			"items": {
				"type": "object",
				"properties": {
					"name": {"type": "string"},
					"source": {"type": "string"},
					"className":  {"type": "string"},
					"classSource": {"type": "string"},
					"level":  {"type": "integer"},

					"entries": {"type": "array", "items": {"$ref": "entry.json"}},
					"data": {"$ref": "#/definitions/foundryDataObject"},
					"chooseData": {"type": "array", "items": {"$ref": "#/definitions/foundryDataObject"}},
					"isChooseDataRenderEntries": {"type": "boolean"},
					"isIgnored": {"type": "boolean"},
					"actorDataMod": {"type": "object"},
					"actorTokenMod": {"type": "object"},
					"effects": {"type": "array", "items": {"$ref": "#/definitions/foundryEffectObject"}},

					"subEntities": {"$ref": "#/definitions/foundrySubEntitiesObject"}
				},
				"required": [
					"name",
					"source",
					"className",
					"classSource",
					"level"
				],
				"additionalProperties": false
			}
		},
		"subclassFeature": {
			"type": "array",
			"items": {
				"type": "object",
				"properties": {
					"name": {"type": "string"},
					"source": {"type": "string"},
					"className":  {"type": "string"},
					"classSource": {"type": "string"},
					"level":  {"type": "integer"},

					"subclassShortName": {"type": "string"},
					"subclassSource":{"type": "string"},

					"entries": {"type": "array", "items": {"$ref": "entry.json"}},
					"data": {"$ref": "#/definitions/foundryDataObject"},
					"chooseData": {"type": "array", "items": {"$ref": "#/definitions/foundryDataObject"}},
					"isChooseDataRenderEntries": {"type": "boolean"},
					"isIgnored": {"type": "boolean"},
					"actorDataMod": {"type": "object"},
					"actorTokenMod": {"type": "object"},
					"effects": {"type": "array", "items": {"$ref": "#/definitions/foundryEffectObject"}},

					"subEntities": {"$ref": "#/definitions/foundrySubEntitiesObject"}
				},
				"required": [
					"name",
					"source",
					"className",
					"classSource",
					"level",
					"subclassShortName",
					"subclassSource"
				],
				"additionalProperties": false
			}
		}
	},

	"required": [
		"class",
		"classFeature",
		"subclassFeature"
	],
	"additionalProperties": false
}
